                            <span class="label">Status: </span>
                            <div class="status-indicator">
                                <img src="assets/img/icons/emojione_warning.svg" width="25px" />
                                <span class="label">Sous tension:</span> <span class="led on"></span>
                            </div>
                        </div>

                        <div class="status-indicator-start">
                            <button class="start-button"><img src="assets/img/icons/formkit_start.svg" width="70px" /></button>
                        </div>
                        <div class="d-flex status-indicator m-0 w-auto shadow-none">
                            <span class="label">Mode:</span>
                            <div class="d-flex gap-3">
                                <button class="status-indicator border rounded-2 border-1 border-success">
                                    <img src="assets/img/icons/ic_outline-auto-mode.svg" width="25px" />
                                    <span class="label">Automatic</span> <span class="led on"></span>
                                </button>
                                <button class="status-indicator border rounded-2 border-1 border-white">
                                    <img src="assets/img/icons/ic_outline-back-hand.svg" width="25px" />
                                    <span class="label">Manual</span> <span class="led off"></span>
                                </button>
                            </div>
                        </div>
                        @* <div class="status-indicator">
                        <span class="label">Mode:</span>
                        <select>
                        <option>Automatic</option>
                        <option>Manual</option>
                        </select>
                        </div> *@
                        <div class="info-system">
                            <a href="#">System Info</a>
