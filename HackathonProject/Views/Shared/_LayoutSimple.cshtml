<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GaberaInternalHackathon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GaberaInternalHackathon.styles.css" asp-append-version="true" />

    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-to py-0">
        <div class="container d-flex align-items-center my-0">

            <h1 class="logo mr-auto"><a asp-area="" asp-controller="Home">Group 5</a></h1>
            <nav class="nav-menu d-none d-lg-block d-flex align-items-center">
                <ul class="d-flex align-items-center justify-content-end">
                    @* <li><a asp-area="" asp-controller="Home">Home</a></li> *@
                    <li class="nav-li"><a href="#about" data-toggle="modal" data-target="#myModal" class="get-started-btn circle d-flex justify-content-center"><img src="assets/img/icons/ic_baseline-not-started.svg" width="40" /></a></li>
                    <li class="nav-li"><a href="#about" data-toggle="modal" data-target="#myModal" class="get-started-btn circle d-flex justify-content-center active-auto"><img src="assets/img/icons/ic_outline-auto-mode.svg" width="30" /></a></li>
                    <li class="nav-li"><a href="#about" data-toggle="modal" data-target="#myModal" class="get-started-btn circle d-flex justify-content-center"><img src="assets/img/icons/back-hand.svg" width="30" /></a></li>
                    <li class="nav-li"><a href="#about" data-toggle="modal" data-target="#myModal" class="get-started-btn circle d-flex justify-content-center"><img src="assets/img/icons/support.svg" width="30" /></a></li>
                    <li class="nav-li"><a href="#about" data-toggle="modal" data-target="#myModal" class="get-started-btn circle d-flex justify-content-center"><img src="assets/img/icons/start.svg" width="30" /></a></li>

                </ul>
            </nav>
        </div>
    </header>
    <div class="w-100 h-100">
        @RenderBody()
    </div>
    <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
    <div id="preloader"></div>
    <!-- Trigger the modal with a button -->
    

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex flex-row justify-content-between w-100">
                    <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Do you really want to perform this action ?</p>
                </div>
                <div class="modal-fooer d-flex justify-content-between p-3 gap-3">
                    <button type="button" class="btn btn-danger w-50" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-success w-50" data-dismiss="modal">Yes</button>
                </div>
            </div>

        </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>