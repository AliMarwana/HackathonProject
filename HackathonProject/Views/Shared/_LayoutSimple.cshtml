    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modal = document.getElementById('myModal');
            var confirmButton = document.getElementById('confirmAction');
            var modalTitle = modal.querySelector('.modal-title');
            var modalMessage = document.getElementById('modalMessage');

            document.querySelectorAll('[data-toggle="modal"]').forEach(function (button) {
                button.addEventListener('click', function () {
                    var title = this.getAttribute('data-title');
                    var message = this.getAttribute('data-message');

                    modalTitle.textContent = title || 'Confirmation';
                    modalMessage.textContent = message || 'Do you really want to perform this action?';

                });
            });
            confirmButton.addEventListener('click', function () {
                if (modalTitle.textContent === "Toggle Manual Mode") {
                    var hideButton = document.getElementById('hideButton');
                    var formulaire = document.getElementById("formulaire");
                    if (formulaire.style.display === 'none') {
                        formulaire.style.display = 'block';
                        hideButton.style.backgroundColor = "#008F28";
                    } else if (formulaire.style.display === 'block') {
                        formulaire.style.display = 'none';
                        hideButton.style.backgroundColor = "transparent";
                    }
                    else {
                        formulaire.style.display = 'block';
                        hideButton.style.backgroundColor = "#008F28";
                    }
                }
                else {
                    console.log(this.textContent);
                    this.style.backgroundColor = "#008F28";
                }
            });
        });
    </script>

